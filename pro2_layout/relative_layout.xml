<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent" android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/a1"
        android:layout_width="105dp"
        android:layout_height="125dp"
        android:background="#ffff00"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/a2"
        android:layout_width="105dp"
        android:layout_height="125dp"
        android:layout_toRightOf="@id/a1"
        android:background="#ff7777"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/a3"
        android:layout_width="105dp"
        android:layout_height="125dp"
        android:layout_toRightOf="@id/a2"
        android:background="#ff5522"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/a4"
        android:layout_width="210dp"
        android:layout_height="125dp"
        android:layout_below="@id/a1"
        android:background="#ff0099"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/a5"
        android:layout_width="210dp"
        android:layout_height="125dp"
        android:layout_below="@id/a4"
        android:background="#ff1111"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/a6"
        android:layout_width="105dp"
        android:layout_height="250dp"
        android:layout_below="@+id/a3"
        android:layout_toEndOf="@+id/a4"
        android:layout_toRightOf="@+id/a4"
        android:background="#999"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/a7"
        android:layout_width="157.5dp"
        android:layout_height="125dp"
        android:background="#f00"
        android:layout_below="@+id/a6"
        android:layout_toRightOf="@+id/a8"
        android:layout_toEndOf="@+id/a8"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/a8"
        android:layout_width="157.5dp"
        android:layout_height="125dp"
        android:layout_below="@id/a6"
        android:background="#922"></RelativeLayout>
</RelativeLayout>